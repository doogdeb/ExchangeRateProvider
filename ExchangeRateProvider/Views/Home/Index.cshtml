@model ExchangeRateProvider.ViewModels.ExchangeRateViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Exchange Rate Provider</h1>
    <p>Powered by Czech National Bank.</p>
</div>

<table>
    <tr>
        <th>Currency</th>
        <th>Rate</th>
    </tr>
    @foreach (var currency in Model.ExchangeRates!)
    {
        <tr>
            <td>@currency.FormattedCurrency()</td>
            <td>@currency.Value</td>
        </tr>
    }
</table>
